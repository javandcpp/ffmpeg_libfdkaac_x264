<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recorder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guagua.nativeapp.Recorder">


    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="7sp"
            android:text="start_record" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:textSize="7sp"
            android:layout_height="wrap_content"
            android:text="stop_record" />

        <Button
            android:id="@+id/btnSwitchCamera"
            android:layout_width="wrap_content"
            android:textSize="7sp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="switch_camera" />

        <Button
            android:id="@+id/btnFlash"
            android:textSize="7sp"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="switch_flash" />
    </LinearLayout>


    <TextView
        android:id="@+id/tvAudioInfo"
        android:textSize="15sp"
        android:layout_marginTop="100dp"
        android:textColor="#FF0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvVideoInfo"
        android:textSize="15sp"
        android:textColor="#FF0000"
        android:layout_below="@id/tvAudioInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
